// 默认样式
.zyhFormInformationMainDetailPage {
  margin: 0;
  padding: 0;
  box-sizing: border-box;

  *, *::before, *::after {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  li {
    list-style-position: inside;
    list-style-type: none;
  }

  .clearfix::after {
    content: '';
    display: block;
    clear: both;
  }

  height: 100vh;
  display: flex;
  flex-flow: column;

  header {
    // border: 1px solid black;
    .infoArea {
      height: calc(102px + 55px -91px);
      display: flex;
      flex-direction: column;

      .selfProfile {
        // border: 1px solid black;
        padding-top: 40px;
        padding-right: 37px;
        // border: 1px solid red;
      }

      .merchantAccoutScan {
        // border: 1px solid blue;
        border-bottom: 1px solid #ccc;
        height: 77px;
        font-family: PingFangSC-Regular;
        display: flex;
        align-items: center;

        .picture {
          margin-left: 60px;

          img {
            height: 53px;
          }
        }

        p:nth-of-type(1) {
          // border: 1px solid red;
          font-size: 20px;
          font-family: PingFang SC;
          color: #000000;
          font-weight: 400;
          margin: 0 12px;
        }

        .validAccount {
          font-size: 14px;
          font-family: PingFang SC;
          font-weight: 400;
          color: #4EA805;
        }

        .invalidAccount {
          font-size: 14px;
          font-family: PingFang SC;
          font-weight: 400;
          color: #999;
        }

        // .el-button:nth-of-type(1) {
        // margin-left: 30px;
        // background: #1e69fe;
        // border-radius: 10px;
        // border: none;
        // padding: 11px 15px;
        // }
        .blank {
          flex-grow: 1;
        }

        .el-button:nth-of-type(1), .el-button:nth-of-type(2) {
          margin-right: 15px;
          border-radius: 10px;
          padding: 11px 15px;
        }
      }
    }
  }

  section {
    .el-form-item {
      margin: 20px;
      width: 600px;
    }
  }
}

// 弹出框样式
.zyhFormInformationMainDetailPage {
  .el-dialog {
    margin: 0 auto;
    padding: 50px;

    .el-dialog__header {
    }

    .el-dialog__body {
      padding: 10px;

      .el-form {
        &-item {
          margin: 10px;

          &__label {
            text-align: center;
          }

          &__content {
            input {
              text-indent: 10px;
            }
          }
        }
      }
    }

    .el-dialog__footer {
      button {
        padding: 5px;
      }
    }
  }

  .el-form {
    &-item {
      &__label {
        text-align: center;
      }

      &__content {
        input {
          text-indent: 10px;
        }

        button {
          padding: 10px;
        }
      }
    }
  }
}
